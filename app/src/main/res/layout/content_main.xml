<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.smarttechmardan.bilal20.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textViewname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextname"
        android:layout_alignStart="@+id/editTextname"
        android:layout_below="@+id/textViewsignup"
        android:layout_marginTop="22dp"
        android:text="Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewsignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:clickable="false"
        android:text="SignUp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewsignup"
        android:layout_alignRight="@+id/textViewsignup"
        android:layout_below="@+id/textViewname"
        android:background="@drawable/roundcorner"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextname"
        android:layout_alignStart="@+id/editTextname"
        android:layout_below="@+id/editTextname"
        android:layout_marginTop="11dp"
        android:text="User Name"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextUN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewUN"
        android:layout_alignStart="@+id/textViewUN"
        android:layout_below="@+id/textViewUN"
        android:background="@drawable/roundcorner"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextUN"
        android:layout_alignStart="@+id/editTextUN"
        android:layout_below="@+id/editTextUN"
        android:layout_marginTop="12dp"
        android:text="Email"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewemail"
        android:layout_alignStart="@+id/textViewemail"
        android:layout_below="@+id/textViewemail"
        android:background="@drawable/roundcorner"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textViewpswrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextemail"
        android:layout_alignStart="@+id/editTextemail"
        android:layout_below="@+id/editTextemail"
        android:layout_marginTop="14dp"
        android:text="Password"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextpswrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewpswrd"
        android:layout_alignStart="@+id/textViewpswrd"
        android:layout_below="@+id/textViewpswrd"
        android:background="@drawable/roundcorner"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="SignUP"
        android:layout_below="@+id/editTextpswrd"
        android:layout_alignLeft="@+id/textViewsignup"
        android:layout_alignStart="@+id/textViewsignup"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonSignUp"
        android:layout_alignBottom="@+id/buttonSignUp"
        android:layout_alignEnd="@+id/textViewUN"
        android:layout_alignRight="@+id/textViewUN"
        android:text="Login" />

</RelativeLayout>
